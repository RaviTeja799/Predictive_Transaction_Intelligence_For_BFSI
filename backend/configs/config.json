{
    "data": {
        "raw_data_path": "data/raw/transactions_clean.csv",
        "processed_data_path": "data/processed/",
        "train_split": 0.7,
        "val_split": 0.15,
        "test_split": 0.15
    },
    "preprocessing": {
        "handle_missing": true,
        "remove_duplicates": true,
        "outlier_method": "iqr",
        "outlier_threshold": 1.5,
        "normalize_features": true
    },
    "model": {
        "type": "xgboost",
        "n_estimators": 100,
        "max_depth": 6,
        "learning_rate": 0.1,
        "random_state": 42
    },
    "detection": {
        "risk_threshold": 0.5,
        "high_amount_threshold": 10000,
        "new_account_threshold_days": 30
    },
    "api": {
        "host": "0.0.0.0",
        "port": 8000,
        "debug": false
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
}
